solvers
{
    rho
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-07;
        relTol          0;
    }

    U
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-07;
        relTol          0;
    }

    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-08;
        relTol          0.01;
    }

    csi
    {
	solver		 PBiCG;
        preconditioner   DILU;
        tolerance        1e-08;
        relTol           0.;
    }

    csiv2
    {
	solver		 PBiCG;
        preconditioner   DILU;
        tolerance        1e-08;
        relTol           0.;
    }

    H
    {
	solver		 PBiCG;
        preconditioner   DILU;
        tolerance        1e-08;
        relTol           0.;
    }

    k
    {
	solver		 PBiCG;
        preconditioner   DILU;
        tolerance        1e-08;
        relTol           0.;
    }

    epsilon 
    {
	solver		 PBiCG;
        preconditioner   DILU;
        tolerance        1e-08;
        relTol           0.;
    }

}


